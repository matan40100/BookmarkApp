<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matan.project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/m"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:roundIcon="@drawable/m"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".HtmlActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".WebsiteActivity" />
        <activity android:name=".ForgotActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppThemeWith" />
        <activity android:name=".RegisterActivity" />
    </application>

</manifest>